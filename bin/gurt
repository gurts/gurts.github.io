#!/bin/bash

if [ $# -lt 1 ]; then
  echo "Usage: $0 "
  exit
fi

BASE_DIR="$( cd "$( dirname "$0" )/.." && pwd )"
SOURCE_DIR="$BASE_DIR/src"
DESTINATION_DIR="$BASE_DIR/tmp/build"

case "$1" in

serve)
  jekyll serve --source "$SOURCE_DIR" --destination "$DESTINATION_DIR"
  ;;

deploy)
  jekyll build --config "$SOURCE_DIR/_config.yml"
  ;;


esac


